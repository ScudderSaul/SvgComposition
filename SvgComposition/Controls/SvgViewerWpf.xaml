<UserControl x:Class="SvgComposition.Controls.SvgViewerWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvgComposition.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="AliceBlue" >

        <Button x:Name="CloseButton"  Click="CloseButton_OnClick"  Margin="3" Width="120" HorizontalAlignment="Left" >Close</Button>
        <Border  x:Name="ContentBorder" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="Black">
            <Image x:Name="ImageOne"   ImageFailed="ImageOne_OnImageFailed" Width="auto"  ></Image>
        </Border>

    </StackPanel>

</UserControl>
